set -eu

CWD=$(pwd)

PKGNAM=qtcurve
SRCVERSION=1.9.0
VERSION=$(echo $SRCVERSION | tr - _)
BUILD=${BUILD:-1}
TAG=${TAG:-cf}
TMP=${TMP:-/tmp/pkg}
PKG=$TMP/package-$PKGNAM
OUTPUT=${OUTPUT:-/tmp}

DOCFILES="AUTHORS Bugs* COPYING README* ChangeLog.md README* TODO*"

# Enable or disable QT/KDE 4/5 support
# Set yes to QT4 and KDE4 (default in Slackware current)
ENABLE_QT4=${ENABLE_QT4:-YES}
ENABLE_QT5=${ENABLE_QT5:-YES}
ENABLE_KDE4=${ENABLE_KDE4:-YES}
ENABLE_KDE5=${ENABLE_KDE5:-NO}

if [ -z ${ARCH:=""} ]; then
  case "$( uname -m )" in
  i?86) ARCH=i586 ;;
  arm*) ARCH=arm ;;
  *) ARCH=$( uname -m ) ;;
  esac
fi

if [ "$ARCH" = "i586" ]; then
  SLKCFLAGS="-O2 -march=i586 -mtune=i686"
  LIBDIRSUFFIX=""
elif [ "$ARCH" = "i686" ]; then
  SLKCFLAGS="-O2 -march=i686 -mtune=i686"
  LIBDIRSUFFIX=""
elif [ "$ARCH" = "x86_64" ]; then
  SLKCFLAGS="-O2 -fPIC -pipe -fomit-frame-pointer"
  LIBDIRSUFFIX="64"
else
  SLKCFLAGS="-O2"
  LIBDIRSUFFIX=""
fi

mkdir -p $PKG $TMP $OUTPUT
cd $TMP
rm -rf $PKGNAM-$SRCVERSION
tar xvf $CWD/$PKGNAM-$SRCVERSION.tar.gz || tar xvf $CWD/$SRCVERSION.tar.gz
cd $PKGNAM-$SRCVERSION

chown -R root:root .
chmod -R u+w,go+r-w,a+X-s .

# Apply patches
if [ -e $CWD/patches/ ]; then
  for PATCH in $CWD/patches/*.patch; do
    patch -p1 -i $PATCH
  done
fi

# Set QT/KDE 4/5 support
[[ $ENABLE_QT4 == "YES" ]] && QT4="ON" || QT4="OFF"
[[ $ENABLE_QT5 == "YES" ]] && QT5="ON" || QT5="OFF"
[[ $ENABLE_KDE4 == "YES" ]] && KDE4="ON" || KDE4="OFF"
[[ $ENABLE_KDE5 == "YES" ]] && KDE5="ON" || KDE5="OFF"

mkdir build
cd build
cmake \
 -Wno-dev \
 -DCMAKE_C_FLAGS:STRING="$SLKCFLAGS" \
 -DCMAKE_CXX_FLAGS:STRING="$SLKCFLAGS" \
 -DCMAKE_INSTALL_PREFIX=/usr \
 -DMAN_INSTALL_DIR=/usr/man \
 -DSYSCONF_INSTALL_DIR=/etc \
 -DLIB_SUFFIX=${LIBDIRSUFFIX} \
 -DENABLE_TEST=OFF \
 -DENABLE_QT4=$QT4 \
 -DQTC_QT4_ENABLE_KDE=$KDE4 \
 -DENABLE_QT5=$QT5 \
 -DQTC_QT5_ENABLE_KDE=$KDE5 \
 ..

make VERBOSE=1
make install/strip VERBOSE=1 DESTDIR=$PKG

# Don't ship .la files:
rm -f $PKG/{,usr/}lib${LIBDIRSUFFIX}/*.la
cd ..

mkdir -p $PKG/usr/doc/$PKGNAM-$VERSION
cp -a $DOCFILES $PKG/usr/doc/$PKGNAM-$VERSION || true
cat $CWD/$PKGNAM.SlackBuild > $PKG/usr/doc/$PKGNAM-$VERSION/$PKGNAM.SlackBuild

mkdir -p $PKG/install
cat $CWD/slack-desc > $PKG/install/slack-desc

cd $PKG
/sbin/makepkg -l y -c n $OUTPUT/$PKGNAM-$VERSION-$ARCH-$BUILD$TAG.${PKGTYPE:-txz}
